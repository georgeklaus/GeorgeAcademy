{
  "builds": [
    {
      "src": "my_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "installCommand": "python -m pip install --upgrade pip setuptools wheel && pip install -r requirements.txt",
        "includeFiles": [
          "**/*.html",
          "staticfiles/**",
          "media/**",
          "my_project/templates/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "media/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "my_project/wsgi.py"
    }
  ]
}