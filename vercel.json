{
  "builds": [
    {
      "src": "my_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12",
        "postInstallCommand": "chmod +x build.sh && ./build.sh",
        "includeFiles": [
          "**/*.html",
          "staticfiles/**",
          "media/**",
          "my_project/templates/**",
          "my_project/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "media/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "my_project/wsgi.py"
    }
  ]
}